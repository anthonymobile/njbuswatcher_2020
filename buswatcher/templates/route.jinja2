                <!--Grid row-->
                <div class="row mb-4 wow fadeIn">


                    {% for trip in routereport.active_trips %}

                    <!--Grid column-->
                    <div class="col-lg-4 col-md-12 mb-4">

                        <!--Card-->
                        <div class="card">

                            <!--Card content-->
                            <div class="card-body">
                                <!--Title-->
                                <h4 class="card-title">Bus {{ trip.trip_id | split_(0) }}</h4>
