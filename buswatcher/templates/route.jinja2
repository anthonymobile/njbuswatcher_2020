                                                    <tr class='table-success'>

                                                <tr class='table text-left'>

                                                    <td>{{stop.arrival_timestamp|strftime_today}}</td>
                                                    <td>{{stop.stop_name|title}}</td>
                                                </tr>
                                                {% endif %}

                                                {% endfor %}

                                                </tbody>
                                    </table>

                                </div>




                            </div>

                        </div>
                        <!--/.Card-->


                    </div>
                    <!--Grid column-->


                    {% endfor %}



                </div>
                <!--Grid row-->


            </section>
            <!--Section: Current Service-->




        </div>


    </main>
    <!--Main layout-->


{% endblock %}
